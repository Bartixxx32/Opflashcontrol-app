<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <Button
        android:id="@+id/destroyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="706dp"
        android:text="@string/destroyer" />

    <TextView
        android:id="@+id/masterTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="776dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/info" />

    <TextView
        android:id="@+id/flashbrightness"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_x="0dp"
        android:layout_y="60dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="OnePlus Flash Brightness"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/masterTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="433dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Master Brightness: 0" />

    <TextView
        android:id="@+id/whiteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="453dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="White Brightness: 0" />

    <TextView
        android:id="@+id/yellowTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="473dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Yellow Brightness: 0" />

    <SeekBar
        android:id="@+id/yellowSeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="382dp"
        android:max="255"
        android:min="0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="364dp"
        android:gravity="center"
        android:text="@string/yellow" />

    <SeekBar
        android:id="@+id/whiteSeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="324dp"
        android:max="255"
        android:min="0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="305dp"
        android:gravity="center"
        android:text="@string/white" />

    <SeekBar
        android:id="@+id/masterSeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="274dp"
        android:max="255"
        android:min="0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="255dp"
        android:gravity="center"
        android:text="@string/master" />

    <Button
        android:id="@+id/off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="193dp"
        android:text="@string/off" />

    <Button
        android:id="@+id/on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="147dp"
        android:text="@string/on" />

    <Button
        android:id="@+id/navigateToMainActivity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_x="0dp"
        android:layout_y="855dp"
        android:text="@string/quadled" />

</AbsoluteLayout>