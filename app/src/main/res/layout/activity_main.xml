<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <Button
        android:id="@+id/on"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="306dp"
        android:text="On" />

    <Button
        android:id="@+id/destroyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="706dp"
        android:text="Eye destroyer (DONT USE TOO OFTEN)" />

    <Button
        android:id="@+id/off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="360dp"
        android:text="Off" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="422dp"
        android:gravity="center"
        android:text="Master control" />

    <SeekBar
        android:id="@+id/yellowSeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="549dp"
        android:max="255" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="531dp"
        android:gravity="center"
        android:text="Yellow control" />

    <SeekBar
        android:id="@+id/whiteSeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="491dp"
        android:max="255" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="472dp"
        android:gravity="center"
        android:text="White control" />

    <SeekBar
        android:id="@+id/masterSeekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="441dp"
        android:max="255" />

    <TextView
        android:id="@+id/yellowTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="646dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Yellow Brightness: 0" />

    <TextView
        android:id="@+id/masterTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="606dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Master Brightness: 0" />

    <TextView
        android:id="@+id/masterTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="776dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="As safety measure press OFF button every time you use Eye Destroyer" />

    <TextView
        android:id="@+id/whiteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="626dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="White Brightness: 0" />

    <TextView
        android:id="@+id/flashbrightness"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_x="1dp"
        android:layout_y="157dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="OnePlus Flash Brightness"
        android:textSize="24sp" />

</AbsoluteLayout>